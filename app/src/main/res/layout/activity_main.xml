                            <!--</LinearLayout>-->

                            <LinearLayout
                                style="@style/hMatch_vWrap"
                                android:orientation="vertical">

                                <LinearLayout
                                    style="@style/hMatch_vWrap"
                                    android:layout_marginBottom="0dp"
                                    android:padding="0dp">

                                    <Button
                                        android:id="@+id/id_A3_btnStart"
                                        style="@style/buttonFullWidth"
                                        android:text="@string/btnStart" />
                                </LinearLayout>

