<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--General Sizes-->
    <style name="hWrap_vWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hMatch_vMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="hMatch_vWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hWrap_vMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--General TextViews-->
    <style name="generalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <!--Toolbar-->
    <style name="toolbar">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/Black</item>
    </style>

    <!--bckbround image -->
    <style name="BckgImg" parent="hMatch_vMatch">
        <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.75</item>
    </style>

    <!--Toolbar Title-->
    <style name="toolbarTitle" parent="hWrap_vMatch">
        <item name="android:gravity">bottom</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--Toolbar Custome Button-->
    <style name="toolbarCustomButton" parent="hWrap_vMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/AlmostBlack</item>
    </style>

    <!--Teams' Separator-->
    <style name="verticalSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <!--Team Countainer-->
    <style name="teamContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/opaque_black</item>
    </style>

    <!--AthleteÂ«'s  Sticker-->
    <style name="athleteSticker" parent="hMatch_vWrap">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/Black</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!--Stroke under Athlete's ticker-->
    <style name="strokeAthleteSticker" parent="hMatch_vWrap">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <!-- Team Points Counter-->
    <style name="teamPointsCounter">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">9</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/almostAccent</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <!--Small Team Counters -->
    <style name="smallWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">@color/opaqueBlack85</item>
    </style>
    <!--top chronometer Counters -->
    <!--TextViews within Small Counters -->
    <style name="txtViewInSmallWrapper" parent="hWrap_vWrap">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>
        <!--top chronometer needs smaller font for TODO - adapt this font just to smaller mobiles -->
        <style name="topChronTxtViewInSmallWrapper" parent="txtViewInSmallWrapper">
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">bold</item>
        </style>
    <!--Right Side TextViews within Small Counters -->
    <style name="rightSideTxtViewInSmallWrapper" parent="txtViewInSmallWrapper">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Route Wrapper-->
    <style name="routeWrapper" parent="hMatch_vWrap">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">20dp</item>

    </style>


    <!--Route Points Counter sticker-->
    <style name="routePointsCounter" parent="topChronTxtViewInSmallWrapper">
        <item name="android:padding">1dp</item>
        <item name="android:background">@color/opaqueBlack90</item>
    </style>

    <!--Labels-->
    <!--Climbing Route Title-->
    <style name="problemTitle" parent="generalTextView">

        <item name="android:textSize">14dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:background">@color/White</item>
        <item name="android:textColor">@color/roxo</item>
        <item name="android:alpha">0.8</item>
    </style>


    <!--Climbing Route Title Bar-->
    <style name="A_clbRouteTitleBar" parent="hMatch_vWrap">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!--Climbing Route Title Bar-->
    <style name="clbRouteResultsWrapper" parent="hMatch_vWrap">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <!--Climbing Route Try Text-->
    <style name="clbRouteTryText" parent="hWrap_vWrap">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Try Counter-->
    <style name="TryCounter" parent="hWrap_vWrap">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="TryRight" parent="TryCounter">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="TryLeft" parent="TryCounter">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="tryCounterWraper" parent="hWrap_vWrap">
        <item name="android:background">@color/opaqueBlack85</item>
        <item name="android:alpha">1</item>
        <item name="android:padding">1dp</item>
    </style>

    <!-- Buttons-->
    <style name="buttonFullWidth" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginBottom">8dp</item>

        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="buttonSharedWidth" parent="@style/buttonFullWidth">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>

    </style>

</resources>
