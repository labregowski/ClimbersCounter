<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<!--Logo-->
    <style name="LogoStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <!--<item name="android:width">@dimen/LogoMaxWidth</item>-->
        <!--<item name="android:adjustViewBounds">true</item>-->
    </style>
    <!--General Sizes-->
    <style name="hMatchParent_vWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="hWrap_vWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--General TextViews-->
    <style name="generalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Top Stickers-->
    <!--Small Counters -->
    <style name="smallWrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:background">#85000000</item>
    </style>
    <!--top shronometer Counters -->

    <!--TextViews within Small Counters -->
    <style name="txtViewInSmallWrapper" parent="hWrap_vWrap">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>
        <!--top chronometer needs smaller font for TODO - adapt this font just to smaller mobiles -->
        <style name="topChronTxtViewInSmallWrapper" parent="txtViewInSmallWrapper">
            <item name="android:textSize">14sp</item>
            <item name="android:textStyle">bold</item>
        </style>
    <!--Right Side TextViews within Small Counters -->
    <style name="rightSideTxtViewInSmallWrapper" parent="txtViewInSmallWrapper">
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Labels-->
    <!--Climbing Route Title-->
    <style name="problemTitle" parent="generalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@color/White</item>
        <item name="android:textColor">#7e5f9c</item>
        <item name="android:alpha">0.8</item>

        <!--<item name="android:background">#7e5f9c</item>-->
        <!--<item name="android:textColor">@color/White</item>-->
    </style>
    <!--Climbing Route Title Bar-->
    <style name="A_clbRouteTitleBar" parent="hMatchParent_vWrapContent">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:alpha">0.7</item>
    </style>





    <!-- Try Counter-->
    <style name="TryCounter" parent="hWrap_vWrap">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="TryRight" parent="TryCounter">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="TryLeft" parent="TryCounter">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="tryCounterWraper" parent="hWrap_vWrap">
        <item name="android:background">#85000000</item>
        <!--<item name="android:background">#a67fcc</item>-->
        <item name="android:alpha">1</item>
        <item name="android:padding">1dp</item>
    </style>








    <!--Separators-->
    <style name="horizontalSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="verticalSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:background">@android:color/black</item>
    </style>








    <style name="TryCounterFailed" parent="generalTextView">
        <item name="android:textColor">#cac8c8</item>
    </style>

    <!-- General Sizing and Positioning -->

    <!--HorMatchParent_VerMatchParent-->
    <style name="HorMatchParent_VerMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/DefaultBottomMargin</item>
    </style>
    <!-- General Image Style -->
    <style name="GeneralImage" parent="HorMatchParent_VerMatchParent">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
    </style>
    <!--bckbround image -->
    <style name="BckgImg" parent="HorMatchParent_VerMatchParent">
        <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.7</item>
    </style>
    <!-- HScroll Images -->
    <style name="HScrollImage" parent="HorMatchParent_VerMatchParent">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/HorScrollPhotoRRightMargin</item>
        <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
    </style>
    <!--Hor100%_VertAuto-->
    <style name="HorMatchParent_VertWrap" parent="HorMatchParent_VerMatchParent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--Containers-->
    <style name="ContainerBox" parent="HorMatchParent_VertWrap">
        <item name="android:padding">@dimen/InnerElementsGeneralPadding</item>
        <item name="android:background">@color/Black</item>
    </style>
    <!--Global Scroll-->
    <style name="GlobalScroll" parent="HorMatchParent_VertWrap">
        <item name="android:layout_marginBottom">@dimen/NoBottomMargin</item>
        <item name="android:paddingRight">@dimen/GlobalScrolSidePadding</item>
        <item name="android:paddingLeft">@dimen/GlobalScrolSidePadding</item>
        <item name="android:scrollbars">none</item>
    </style>
    <!--tableBtns image style-->
    <style name="btnInTable" parent="HorMatchParent_VerMatchParent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/Width0_toUseWeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/textHorPadding</item>
        <item name="android:layout_margin">@dimen/NoMargin</item>
    </style>



</resources>
